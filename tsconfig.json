{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES2015",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "rootDir": "./src",      //source code diretory
      "outDir": "./public/js", //parsed js code diretory
      "forceConsistentCasingInFileNames": true
    },
    "include":["src"],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
  }